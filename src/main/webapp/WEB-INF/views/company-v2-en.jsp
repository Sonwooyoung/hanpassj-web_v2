	<script type="text/javascript">
		$(document).ready(function(){
			// slide
			var slideName = $('.owl-carousel');
	        slideName.owlCarousel({
	        	smartSpeed:700,
	        	loop:true,
			    nav:true,
			    items:1,
			    dots:true,
			    autoplay:true,
			    autoplayTimeout:2000,
			    autoplayHoverPause:true
			});

			$('.visual-btn.prev').click(function(){
				slideName.trigger('prev.owl');
				return false;
			})
			$('.visual-btn.next').click(function(){
				slideName.trigger('next.owl');
				return false;
			})

			function calcScreenW(val) {
			    var INIT_W = 1760;
			    return parseInt(val) / INIT_W * window.innerWidth;
			}

			function marquee() {
			    var $marquee = $('.marquee span');
			    $marquee.css('width', 'auto');
			    var CHAR_W = $marquee.eq(0).width() + calcScreenW(100);
			    $('#section-5 .moving').css('width', CHAR_W + 'px');
			    $('#section-5 .marquee').css('width', CHAR_W * 2 + 'px');
			    $marquee.css({
			        float: 'left',
			        width: CHAR_W + 'px'
			    });
			}
			marquee();
			window.addEventListener('resize', function(){
			    var winW = window.innerWidth;
			    if (winW < 1024) {
			        marquee();
			    }
			});
		});
	</script>
